{
  "name": "@depot/cli",
  "version": "1.0.0",
  "description": "depot CLI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "start": "node ./dist/index.js",
    "test": "vitest run",
    "dev": "tsc --watch",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "tsc --noEmit && prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "typecheck": "tsc --noEmit"
  },
  "author": "Francois Laubscher",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.19",
    "prettier": "^3.4.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@depot/core": "workspace:*"
  }
}
