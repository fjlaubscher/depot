{
  "extends": "../core/tsconfig.json",
  "compilerOptions": {
    // Inherit most settings from core; only override what's needed for CLI runtime build
    "baseUrl": "../../",
    "paths": {
      "@depot/core": [
        "packages/core/dist/index.d.ts",
        "packages/core/src/index.ts"
      ],
      "@depot/core/*": [
        "packages/core/dist/*",
        "packages/core/src/*"
      ]
    },
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "types": ["node", "vitest"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
