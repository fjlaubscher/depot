{
  "extends": "../core/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "allowJs": false,
    "esModuleInterop": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@depot/core": ["../core/src/index.ts"],
      "@depot/core/*": ["../core/src/*"]
    }
  },
  "types": [
    "vitest/globals",
    "@testing-library/jest-dom"
  ],
  "include": ["src"],
  "exclude": ["dist"]
}
