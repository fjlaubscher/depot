{
  "name": "@depot/workers",
  "version": "1.0.0",
  "description": "Cloudflare Worker handlers for depot",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf dist",
    "dev": "tsc -b --watch",
    "test": "vitest run",
    "format": "prettier --write \"src/**/*.{js,ts,tsx}\"",
    "lint": "tsc -b && prettier --check \"src/**/*.{js,ts,tsx}\"",
    "typecheck": "tsc -b"
  },
  "author": "Francois Laubscher",
  "license": "MIT",
  "dependencies": {
    "@depot/core": "workspace:*",
    "openai": "^6.9.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.19",
    "prettier": "^3.4.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
