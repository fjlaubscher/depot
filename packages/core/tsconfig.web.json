{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Web/React specific settings
    "target": "ESNext", 
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": false,
    "esModuleInterop": false
  }
}