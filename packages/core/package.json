{
  "name": "@depot/core",
  "version": "1.0.0",
  "description": "Shared core functionality and types for depot packages",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types/depot": {
      "types": "./dist/types/depot.d.ts",
      "import": "./dist/types/depot.js",
      "default": "./dist/types/depot.js"
    },
    "./types/wahapedia": {
      "types": "./dist/types/wahapedia.d.ts",
      "import": "./dist/types/wahapedia.js",
      "default": "./dist/types/wahapedia.js"
    },
    "./utils/slug": {
      "types": "./dist/utils/slug.d.ts",
      "import": "./dist/utils/slug.js",
      "default": "./dist/utils/slug.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf dist",
    "dev": "tsc -b --watch",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "tsc --noEmit && prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "prettier": "^3.4.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.9.3"
  },
  "author": "Francois Laubscher",
  "license": "MIT"
}
