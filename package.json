{
  "name": "depot",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "build:packages": "pnpm --recursive run build",
    "start": "pnpm --filter @depot/web start",
    "cli": "pnpm --filter @depot/cli start",
    "format": "prettier --write \"**/src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "prettier --check \"**/src/**/*.{js,jsx,ts,tsx}\"",
    "clean": "pnpm --recursive run clean && rimraf node_modules",
    "dev": "pnpm --filter @depot/web start"
  },
  "devDependencies": {
    "prettier": "^2.8.8",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}